{
  "extends": "@next-inflearn/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@next-inflearn/ui": ["../../packages/ui/src/components"],
      "@next-inflearn/ui/*": ["../../packages/ui/src/*"],
      "@next-inflearn/supabase": ["../../packages/supabase"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
